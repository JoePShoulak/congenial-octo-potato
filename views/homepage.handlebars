<main class="container">
  <div
    {{!-- class="d-flex align-items-center p-3 my-3 text-white bg-purple rounded shadow-sm" --}}
  >
    <!-- Our logo here: -->
    <div class="d-flex justify-content-center">
    <img
      class="m-3"
      src="/images/logo-no-background.png"
      alt=""
      width="210"
      height="140"
    />
  </div>
    <!-- <div class="lh-1">
                <h1 class="h6 mb-0 text-white lh-1">Bootstrap</h1>
                <small>Since 2011</small>
            </div> -->
  </div>
  <div class="my-3 p-3 bg-body bg-light rounded shadow-sm">
    <h6 class="purple-color border-bottom pb-2 mb-0">Recent updates</h6>
    <form id="post-form">
      <div class="form-group">
        <textarea name="content" class="post-content mytextarea"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{#each posts as |post|}}
      <div class="d-flex text-muted pt-3">
        <!-- Profile pic? -->
        <img class="postimg" src="/images/meme.jpeg" width="32" height="32" />
        <p class="pb-3 mb-0 small lh-sm border-bottom">
          <strong class="d-block text-gray-dark">Did you hear that
            <a class="purple-color" href="/users/{{post.User.id}}">{{post.User.first_name}}
              {{post.User.last_name}}</a>
            said...</strong>
          {{post.content}}
        </p>
      </div>
      {{#if post.Comments}}
        {{#each post.Comments as |comment|}}
          <div class="d-flex text-muted pt-3">
            <p
              class="pb-3 mb-0 small lh-sm border-bottom"
              style="margin-left: 75px"
            >
              <strong class="d-block text-gray-dark">And then
                <a class="purple-color"
                  href="/users/{{comment.User.id}}"
                >{{comment.User.first_name}}</a>
                {{!-- {{comment.User.last_name}} --}}
                said...</strong>
              {{comment.content}}</p>
          </div>
        {{/each}}
      {{/if}}
      <button data-postid={{post.id}} class="btn-comment btn-secondary">comment</button>
      <div id="commentArea-{{@index}}"></div>
    {{/each}}
    <small class=" d-block text-end mt-3">
      <a class="purple-color" href="#">All updates</a>
    </small>
  </div>
  <div class="my-3 p-3 bg-body rounded bg-light shadow-sm">
    <h6 class="purple-color border-bottom pb-2 mb-0">Suggestions</h6>
    <div class="d-flex text-muted pt-3">
      <svg
        class="bd-placeholder-img flex-shrink-0 me-2 rounded"
